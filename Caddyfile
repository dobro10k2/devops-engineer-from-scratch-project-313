{
    auto_https off
}

:8080 {

    # Serve built frontend
    root * /app/frontend/dist
    file_server

    # API reverse proxy
    handle_path /api/* {
        reverse_proxy localhost:8080
    }

    # Redirect handler
    handle_path /r/* {
        reverse_proxy localhost:8080
    }

    # Sentry debug passthrough
    handle_path /sentry-debug {
        reverse_proxy localhost:8080
    }

    # Fallback for SPA routing
    try_files {path} /index.html
}

